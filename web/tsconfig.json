{
    "compilerOptions": {
        "target": "ES2023",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "ES2023"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}